<!--    <filter-name>PageRedirectSecurityFilter</filter-name>-->
<!--    <url-pattern>/jsp/*</url-pattern>-->
<!--  </filter-mapping>-->

  <jsp-config>
    <taglib>
      <taglib-uri>customtags</taglib-uri>
      <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
    </taglib>
  </jsp-config>

</web-app>
